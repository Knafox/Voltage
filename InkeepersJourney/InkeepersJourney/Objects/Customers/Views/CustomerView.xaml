<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InkeepersJourney.Objects.Customers.CustomerView"
             xmlns:model="clr-namespace:InkeepersJourney.Objects.Customers"
             xmlns:viewmodel="clr-namespace:InkeepersJourney.Objects.Customers"
             x:DataType="viewmodel:CustomerViewModel">
    <VerticalStackLayout
        Padding="5">
        <HorizontalStackLayout>
            <Label Text="Customer Name: !"/>
            <Label Text="{Binding Name}" FontAttributes="Bold" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Heads: !"/>
            <Label Text="{Binding Sleeps}" FontAttributes="Bold" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
