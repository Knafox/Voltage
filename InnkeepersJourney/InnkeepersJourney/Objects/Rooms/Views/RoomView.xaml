<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:InnkeepersJourney.Objects.Rooms"
             xmlns:viewmodel="clr-namespace:InnkeepersJourney.Objects.Rooms"
             x:Class="InnkeepersJourney.Objects.Rooms.RoomView">
    <VerticalStackLayout
        Padding="5">
        <HorizontalStackLayout>
            <Label Text="Room Number: "/>
            <Label Text="{Binding Id}" FontAttributes="Bold" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Beds: "/>
            <Label Text="{Binding Sleeps}" FontAttributes="Bold" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Status: "/>
            <Label Text="{Binding Status}" FontAttributes="Bold" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
